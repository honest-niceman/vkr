<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://productInTheShopBrowseForScript.caption"
        focusComponent="productInTheShopsTable"
        messagesPack="com.company.vkr.web.screens.productintheshop">
    <data readOnly="true">
        <collection id="productInTheShopsDc"
                    class="com.company.vkr.entity.business.ProductInTheShop">
            <view extends="_local">
                <property name="product" view="_minimal"/>
                <property name="shop" view="_minimal"/>
            </view>
            <loader id="productInTheShopsDl">
                <query>
                    <![CDATA[select e from vkr_ProductInTheShop e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="productInTheShopsTable"
            spacing="true">
        <textArea id="textArea"/>
        <button id="btn"/>
        <filter id="filter"
                applyTo="productInTheShopsTable"
                dataLoader="productInTheShopsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="productInTheShopsTable"
                    width="100%"
                    dataContainer="productInTheShopsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="product"/>
                <column id="shop"/>
                <column id="price"/>
                <column id="count"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="productInTheShopsTable.create"/>
                <button id="editBtn" action="productInTheShopsTable.edit"/>
                <button id="removeBtn" action="productInTheShopsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
