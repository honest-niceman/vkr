<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://shopEarnings.caption"
        focusComponent="shopsTable"
        messagesPack="com.company.vkr.web.screens.analytics.earnings">
    <data readOnly="true">
        <collection id="shopsDc"
                    class="com.company.vkr.entity.network.Shop">
            <view extends="_local"/>
            <loader id="shopsDl">
                <query>
                    <![CDATA[select e from vkr_Shop e where e.manager = :manager or e.createdBy = :networkCeo]]>
                </query>
            </loader>
        </collection>

        <collection id="purchasedProductsDc"
                    class="com.company.vkr.entity.business.PurchasedProduct">
            <view extends="_local">
                <property name="productInTheShop" view="_minimal">
                    <property name="price"/>
                    <property name="product" view="_minimal">
                        <property name="price"/>
                    </property>
                </property>
                <property name="purchase" view="_minimal"/>
            </view>
            <loader id="purchasedProductsDl">
                <query>
                    <![CDATA[select e from vkr_PurchasedProduct e]]>
                </query>
            </loader>
        </collection>

        <collection id="shopEarningsDc"
                    class="com.company.vkr.entity.analytics.ShopEarnings"
                    view="_local"/>
    </data>
    <layout expand="grid">
        <filter id="filter"
                applyTo="shopsTable"
                dataLoader="shopsDl">
            <properties include=".*"/>
        </filter>
        <grid id="grid">
            <columns count="2"/>
            <rows>
                <row>
                    <groupTable id="shopsTable"
                                dataContainer="shopsDc"
                                width="200px"
                                height="500px">
                        <columns>
                            <column id="name"/>
                        </columns>
                        <rowsCount/>
                    </groupTable>

                    <chart:serialChart id="lineChart"
                                       width="1400px"
                                       height="500px"
                                       autoMargins="true"
                                       categoryField="date"
                                       dataContainer="shopEarningsDc"
                                       marginTop="90"
                                       marginRight="40"
                                       marginLeft="80"
                                       mouseWheelZoomEnabled="true"
                                       theme="LIGHT">
                        <chart:valueAxes>
                            <chart:axis id="v1"
                                        axisAlpha="0"
                                        ignoreAxisWidth="true"
                                        position="LEFT"/>
                        </chart:valueAxes>
                        <chart:balloon borderThickness="1"
                                       shadowAlpha="0"/>
                        <chart:graphs>
                            <chart:graph id="g1"
                                         bullet="ROUND"
                                         bulletBorderAlpha="1"
                                         bulletBorderColor="WHITE"
                                         hideBulletsCount="50"
                                         lineThickness="2"
                                         useNegativeColorIfDown="true"
                                         negativeLineColor="ORANGERED"
                                         valueField="profit"
                                         balloonText="&lt;span style='font-size:12px;'&gt;[[value]]&lt;/span&gt;">
                                <chart:balloon adjustBorderColor="false"
                                               color="WHITE"
                                               drop="true"/>
                            </chart:graph>
                        </chart:graphs>
                        <chart:categoryAxis dashLength="1"
                                            minorGridEnabled="true"/>
                        <chart:chartCursor cursorAlpha="1"
                                           cursorColor="#258cbb"
                                           cursorPosition="MOUSE"
                                           limitToGraph="g1"
                                           pan="true"
                                           valueLineAlpha="0.2"
                                           valueLineEnabled="true"
                                           valueLineBalloonEnabled="true"
                                           valueZoomable="true"/>
                        <chart:export/>
                    </chart:serialChart>
                </row>
            </rows>
        </grid>

        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
